<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.first.AdminInfoMapper">

    <sql id="getAdminInfo">
        select sid, login_id, login_pw, name, created_at, updated_at, last_login_at
        from admin_info
    </sql>
    <select id="getAdminInfoBySid" parameterType="int" resultType="com.example.demo.bean.vo.AdminInfo">
        <include refid="getAdminInfo"/>
        where sid = #{sid} and deleted_at isnull;
    </select>
    <select id="getAdminInfoByLoginId" parameterType="string" resultType="com.example.demo.bean.vo.AdminInfo">
        <include refid="getAdminInfo"/>
        where login_id = #{loginId}
    </select>

    <select id="getAdminSid" parameterType="com.example.demo.bean.vo.AdminInfo" resultType="int">
        select sid
        from admin_info
        where login_id = #{loginId}
        <if test="loginPw != null">
            and login_pw = #{loginPw}
        </if>
    </select>

    <update id="updateAdminInfoBySid" parameterType="com.example.demo.bean.vo.AdminInfo">
        update admin_info
        <trim prefix="set" prefixOverrides=",">
            <if test="loginId != null">, login_id = #{loginId}</if>
            <if test="loginPw != null">, login_pw = #{loginPw}</if>
            <if test="name != null">, name = #{name}</if>
            , updated_at = now()
        </trim>
        where sid = #{sid}
    </update>

    <update id="updateAdminLoginAt" parameterType="com.example.demo.bean.vo.AdminInfo">
        update admin_info
        set last_login_at = now()
        where login_id = #{loginId}
          and login_pw = #{loginPw}
    </update>

    <insert id="insertAdminInfo" parameterType="com.example.demo.bean.vo.AdminInfo"
            useGeneratedKeys="true" keyColumn="sid" keyProperty="sid">
        insert into admin_info(login_id, login_pw, name)
        values (#{loginId}, #{loginPw}, #{name})
    </insert>

    <delete id="deleteAdminInfo" parameterType="int">
        delete from admin_info
        where sid in
        <foreach collection="sids" item="item" open="(" separator="," close=")">#{item}</foreach>
    </delete>
</mapper>